{
    "$id": "api.schema.json",
	"type": "object",
	"patternProperties": {
		"^\\S*$": {
			"type": "object",
			"required": [ "access", "label" ],
			"properties": {
				"access": { "type": "boolean" },
				"label": { "type": "string" },
				"fields": {
					"type": "object",
					"properties": {
						"allow": { "type": "array", "uniqueItems": true, "items": { "type": "string" } },
						"deny": { "type": "array", "uniqueItems": true, "items": { "type": "string" } }
					},
					"additionalProperties": false
				}
			},
			"additionalProperties": false
		}
	},
	"additionalProperties": false
}